<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="9dp"
     app:cardCornerRadius="6dp"
    android:layout_marginBottom="5dp"
    >

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/info"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/coloritem"
        >

        <ImageView
            android:id="@+id/food_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_alignParentTop="true"
            android:background="@color/background_material_light"
            android:src="@drawable/d"
            android:scaleType="centerCrop"
            />

        <ImageView
            android:id="@+id/share_imageFood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/food_image"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"
            android:padding="5dp"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/ic_share_black_24dp"
            />

        <TextView
            android:id="@+id/food_price_foodList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="@+id/food_image"
            android:layout_above="@+id/food_name"
            android:padding="10dp"
            android:text="1000 $"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_alignParentRight="true"
            android:background="@drawable/background_price"
            android:textColor="@color/white"
            android:fontFamily="serif"
            />

        <TextView
            android:id="@+id/food_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Precio Zanga Zanga"
            android:layout_alignBottom="@+id/food_image"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:padding="8dp"
            android:textStyle="bold"
            android:textSize="25dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:textColor="@android:color/white"
            android:fontFamily="serif"
            android:background="#4f0e0d0e"

            />

      <!--  <ImageView
            android:id="@+id/background_text_name"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignBottom="@+id/miniatura_hotel"
            app:srcCompat="@drawable/black_gradiant"
            />-->

        <ImageView
            android:id="@+id/queck_cart_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:src="@drawable/ic_shopping_cartsmal_black_24dp"
            android:layout_below="@+id/food_image"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="5dp"
            />

        <ImageView
            android:id="@+id/fav_imageFood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/food_image"
            android:layout_centerInParent="true"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="8dp"
            android:padding="5dp"
            android:src="@drawable/ic_favorite_border_black_24dp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>



